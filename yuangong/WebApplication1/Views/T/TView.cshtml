@using WebApplication1.Models;

@{
    Layout = null;
    Employee emp = (Employee)ViewData["Employee"];
    Customer cto = (Customer)ViewData["Customer"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TView</title>
</head>
<body>
    <div> 
        <h2>员工信息</h2>
        <p>姓名：@emp.Name</p>
        <p>工资：@emp.Salary.ToString("C")</p>
        <h2>客户信息</h2>
        <p>客户姓名：@cto.CustomerName</p>
        <p>信息：@cto.Address</p></div>
</body>
</html>
